extends layout

block content
  .container-fluid.hidden-phone.hidden-tablet(ng-controller='AppCtrl as app')   
      nav#nav.navbar.row-fluid(role='navigation')
        .rmenu
          h3.menutext Brand Name
          .menubutton.desktop(type='button', data-toggle='dropdown')
            img.logo5.desktop(src='/images/3lines.png')
          ul#menu.dropdown-menu.dropdown-menu-right(role='menu', aria-labelledby='dropdownMenu1')
            li#div1(role='presentation')
              a(role='menuitem', tabindex='-1', href='#aboutMe', data-id='div1') something
            li.divider(role='presentation')
            li#div2(role='presentation')
              a(role='menuitem', tabindex='-1', href='#stockickr', data-id='div2') something
            li.divider(role='presentation')
      .mainwrapper  
        section.module.parallax.parallax-1
          .container(ng-controller='ModalCtrl')
            h3 sentence about empowerment
            form.hero
              .form-group
                label How much does your business need to reach its goal?
                input.form-control(type='email', placeholder='$40,000')
            <br>
            button#btn.btn.btn-primary(ng-controller='BtnCtrl as btn', type='button', ng-model='singleModel', ng-click="open()")  More    

        section.module.content#aboutMe
          p.line
          h2 steps in the process
          


  script(src='/bower_components/jquery/dist/jquery.js')
  script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular/angular-route.js')
  script(src='js/ui-bootstrap-tpls.min.js')
  script(src='/js/app.js')
  script(src='/js/controllers.js')
