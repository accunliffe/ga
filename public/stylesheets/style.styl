@import url('http://fonts.googleapis.com/css?family=Raleway')
@font-face 
  font-family:'leagueG'
  src url('/fonts/LeagueGothic-Regular.otf')
@font-face 
  font-family:'Code'
  src url('/fonts/Code.otf')
@font-face 
  font-family:'MSans'
  src url('/fonts/M-Sans.ttf')
@font-face 
  font-family:'Arca'
  src url('/fonts/Arca-Heavy.ttf')
  
.bodyWrapper
  height 100%
  width 100%
  
.card.heroImage
  @media screen and (min-width: 2300px)
    height 800px
  background-image url("/images/city1.jpg") !important
  height auto
  background-position 50%
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  text-align center
  h1
    @media screen and (min-width 1500px)
      margin 10% 0 0 0
    color white
    font-size 48px
    text-align center
    text-transform uppercase
    margin 2% 0 0 0
  p
    color white
    font-size 24px
    text-align center
  button.btn.btn--m.btn--white.btn--raised
    margin 30px 0 60px 0
    display inline-block
  .btn.btn--m.btn--white.btn--raised
    margin 30px 0 0 0
  .flex-container.textInput
    color white
    width 300px
    text-align center

.card.process
  height 600px

